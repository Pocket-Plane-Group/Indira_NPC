AUTO_TRA ~IndiNPC/Tra/autotra/%s~

ALWAYS
  INCLUDE ~IndiNPC/Lib/er_lib.tpa~
  LAF autotra_workaround END
  LAM bgee_language

// Adds CD_STATE_NOTVALID state
APPEND ~STATE.IDS~ ~0x80101FEF CD_STATE_NOTVALID~
UNLESS ~CD_STATE_NOTVALID~

END

